
<form>
    <input type="text" class="form-control" id="search" name="search" placeholder="Rechercher un utilisateur">
</form>

<div id="user-list" class="mt-3">
    {% include "configuration/companyUsers/webui/list.html.twig" with {
        users: []
    } %}
</div>

<div>
    <button hx-get="{{ path('app_gestion_company_users_edit', { userid: 'new' }) }}" 
        hx-target="#user-edit-modal" hx-trigger="click" data-bs-toggle="modal"
        data-bs-target="#user-edit-modal"
        class="btn btn-sm btn-primary btn-sm mx-3">
        <i class="bi bi-plus"></i> Ajouter un utilisateur
    </button>
</div>

<div id="user-edit-modal"
    class="modal modal-blur fade"
    style="display: none"
    aria-hidden="false"
    tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content"></div>
    </div>
</div>