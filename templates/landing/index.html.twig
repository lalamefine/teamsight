{% block body %}

    <style>
        :root {
            --bs-primary: #4338CA; /* Votre $primary: rgb(67 56 202) */
            --bs-primary-rgb: 67, 56, 202;
            --bs-secondary: #6366F1; /* Votre $secondary: rgb(99 102 241) */
            --bs-secondary-rgb: 99, 102, 241;

            /* Nuances personnalisées pour des boutons spécifiques si nécessaire */
            --custom-primary-lighter: #E0E7FF; /* Similaire à indigo-100 */
            --custom-primary-lighter-darker: #C7D2FE; /* Pour hover sur btn-light-primary */
            --custom-primary-darker-for-hover: #3A30B0; /* Pour hover sur btn-primary */
        }

        body {
            font-family: 'Inter', sans-serif;
            color: #374151; /* Equivalent à text-gray-800 */
        }

        /* Ajustement du hover pour btn-primary si nécessaire */
        .btn-primary:hover {
          background-color: var(--custom-primary-darker-for-hover);
          border-color: var(--custom-primary-darker-for-hover);
        }

        /* Bouton pour "En savoir plus" (fond clair, texte primaire) */
        .btn-light-primary {
            background-color: var(--custom-primary-lighter) !important;
            border-color: var(--custom-primary-lighter) !important;
            color: var(--bs-primary) !important;
        }
        .btn-light-primary:hover {
            background-color: var(--custom-primary-lighter-darker) !important;
            border-color: var(--custom-primary-lighter-darker) !important;
            color: var(--custom-primary-darker-for-hover) !important;
        }

        .hero-bg {
            background-color: #F3F4F6; /* Gris clair, Tailwind gray-100 */
        }

        .feature-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important; /* Ombre Bootstrap lg */
        }

        .cta-button { /* Transition générale pour les boutons CTA */
            transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
        }

        /* Fond des icônes de fonctionnalités */
        .icon-bg {
            background-color: var(--bs-primary) !important;
            width: 50px; /* Taille fixe pour l'icône */
            height: 50px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        /* Couleur de survol pour les liens de la navbar */
        .navbar-nav .nav-link:hover,
        .navbar-nav .nav-link.active {
            color: var(--bs-primary) !important;
        }
        .navbar-brand {
            color: var(--bs-primary) !important;
            font-weight: bold;
        }
        .navbar-light .navbar-toggler-icon { /* Assurez-vous que l'icône du toggler est visible */
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(67, 56, 202, 1)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }


        /* Couleur de survol pour les liens du pied de page */
        .footer-links a {
            color: rgba(255, 255, 255, 0.6); /* Gris clair pour le texte du footer */
            text-decoration: none;
        }
        .footer-links a:hover {
            color: var(--bs-primary) !important;
        }
        .footer-bg {
            background-color: #1f2937; /* Equivalent à bg-gray-800 */
        }

        /* Sous-titre de section (ex: "Nos Solutions") */
        .section-subheading {
            color: var(--bs-primary);
            font-weight: 600; /* semibold */
            text-transform: uppercase;
            font-size: 0.875rem; /* text-base (Tailwind) -> 1rem, so small or .875rem */
        }
        .section-title {
            font-weight: 800; /* extrabold */
        }

        /* Pour que les cartes de fonctionnalités aient la même hauteur */
        .feature-card-deck .card {
            height: 100%;
        }
        
        /* Section CTA (Appel à l'action) */
        .cta-section {
            background-color: var(--bs-primary);
        }

    </style>

